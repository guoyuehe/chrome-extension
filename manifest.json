{
  "manifest_version": 3,
  "name": "Twitter Sentiments",
  "version": "1.0",
  "description": "Read the tweets presented in the timeline. Add three emojis (😊, 😐, ☹️) next to the date of the tweet based on their sentiment score.",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://twitter.com/*","https://chrome-extension-3705.wl.r.appspot.com/*"
  ],
  "action": {},
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://twitter.com/*"],
      "js": ["content.js"]
    }
  ]
}